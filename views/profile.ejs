<%- include('./partials/header') %>
       <div class="flex-grow container mx-auto mt-10">
            <div class="max-w-4xl mx-auto bg-gray-800 shadow rounded-lg p-6">
                <div class="flex items-center space-x-6">
                    <img src="<%= user.picture || 'https://via.placeholder.com/100' %>" alt="Profile Picture" class="w-24 h-24 rounded-full object-cover">
                    <div>
                        <h1 class="text-2xl font-semibold text-gray-100"><%= user.fullname %></h1>
                        <p class="text-gray-400">Email: <%= user.email %></p>
                        <p class="text-gray-400">Contact: <%= user.contact || 'Not Provided' %></p>
                    </div>
                </div>

                <div class="mt-6">
                    <h2 class="text-lg font-medium text-gray-100">Order History</h2>
                    <% if (user.orders && user.orders.length > 0) { %>
                        <ul class="mt-4 space-y-2">
                            <% user.orders.forEach(order => { %>
                                <li class="bg-gray-700 p-4 rounded-lg shadow">
                                    <p class="font-medium text-gray-200">Order ID: <%= order.id %></p>
                                    <p class="text-gray-400">Total: $<%= order.total %></p>
                                    <p class="text-gray-400">Date: <%= order.date %></p>
                                </li>
                            <% }) %>
                        </ul>
                    <% } else { %>
                        <p class="text-gray-400 mt-2">You have no orders yet.</p>
                    <% } %>
                </div>
            </div>
        </div>
<%- include('./partials/footer') %>